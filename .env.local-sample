# Local development environment variables
# Parse terraform.tfvars for consistency
TFVARS_FILE=""

# Extract values from terraform.tfvars
if [ -f "$TFVARS_FILE" ]; then
    export PROJECT_ID=$(grep 'project_id' "$TFVARS_FILE" | cut -d'"' -f2)
    export REGION=$(grep 'region' "$TFVARS_FILE" | cut -d'"' -f2)
else
    # Fallback values
    export PROJECT_ID=""
    export REGION=""
fi

# Service Account Authentication
export GOOGLE_APPLICATION_CREDENTIALS=""
export GOOGLE_CLOUD_PROJECT="$PROJECT_ID"
export GCP_PROJECT="$PROJECT_ID"

# Regional Settings
export GOOGLE_CLOUD_REGION="$REGION"
export GCP_REGION="$REGION"

# gcloud CLI Path
export PATH=":$PATH"

# Terraform Variables (sourced from tfvars)
export TF_VAR_project_id="$PROJECT_ID"
export TF_VAR_region="$REGION"

# For debugging and automation
export TF_LOG=""
export CLOUDSDK_CORE_DISABLE_PROMPTS=1
